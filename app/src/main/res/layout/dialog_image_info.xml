<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/info_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <TextView
            style="@style/infoBottomSheetStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="0.5"
            android:text="Creation date"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/infoBottomSheetStyle"
                android:id="@+id/image_creation_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <ImageButton
                android:id="@+id/pic_info_edit_date"
                style="@style/infoBottomSheetStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="File name"/>

        </LinearLayout>


        <TextView
            android:layout_columnWeight="0.5"
            android:layout_column="0"
            android:layout_row="1"
            style="@style/infoBottomSheetStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="File name"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/image_name"
                style="@style/infoBottomSheetStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <ImageButton
                android:id="@+id/pic_info_edit_name"
                style="@style/infoBottomSheetStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="File name"/>

        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            style="@style/infoBottomSheetStyle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="0.5"
            android:text="Albums"/>

        <TextView
            android:id="@+id/albums"
            style="@style/infoBottomSheetStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:text=""/>

        <TextView
            android:layout_width="0dp"
            style="@style/infoBottomSheetStyle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="0.5"
            android:text="Image size"/>

        <TextView
            android:id="@+id/size"
            style="@style/infoBottomSheetStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:text=""/>

        <TextView
            android:layout_width="0dp"
            style="@style/infoBottomSheetStyle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="0.5"
            android:text="Added by"/>

        <TextView
            android:id="@+id/info_addedby"
            style="@style/infoBottomSheetStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:text=""/>

        <TextView
            android:layout_width="0dp"
            style="@style/infoBottomSheetStyle"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="0.5"
            android:text="Keywords"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_keywords"
                style="@style/infoBottomSheetStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <ImageButton
                android:id="@+id/pic_info_edit_keywords"
                style="@style/infoBottomSheetStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="File name"/>

        </LinearLayout>



    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>